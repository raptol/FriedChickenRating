<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ratings.NewRatingFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgViewPicture"
                    android:layout_width="100dp"
                    android:layout_height="130dp"
                    android:layout_weight="0.8"
                    tools:src="@tools:sample/avatars" />

                <Button
                    android:id="@+id/btnUploadPicture"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:text="Upload Picture"
                    android:textSize="10sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/newRatingPlaceName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="Chicken restaurant name"
                    android:inputType="textPersonName"
                    tools:text="Pelocan Chicken" />

                <EditText
                    android:id="@+id/newRatingRegion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="Region: Burnaby"
                    android:inputType="textPersonName"
                    android:minHeight="48dp"
                    tools:text="Burnaby" />

                <EditText
                    android:id="@+id/newRatingChickenType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="Type: Korean, Japanese"
                    android:inputType="textPersonName"
                    android:minHeight="48dp"
                    tools:text="Korean" />

                <EditText
                    android:id="@+id/newRatingTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Chicken menu title"
                    android:inputType="textPersonName"
                    android:minHeight="48dp"
                    android:gravity="center"
                    tools:text="Spicy Chicken 15pcs" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/btnOpenMap"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/img" />

                <Button
                    android:id="@+id/btnDoneNewRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="90dp"
                    android:text="Done" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.4"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="My Ratings" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Flavor" />

                <RatingBar
                    android:id="@+id/ratingBarFlavor"
                    style="@android:style/Widget.Material.Light.RatingBar.Indicator"
                    android:layout_width="180dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="10dp"
                    android:isIndicator="false"
                    android:numStars="5"
                    tools:ignore="SpeakableTextPresentCheck"></RatingBar>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Crunch" />

                <RatingBar
                    android:id="@+id/ratingBarCrunch"
                    style="@android:style/Widget.Material.Light.RatingBar.Indicator"
                    android:layout_width="180dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="10dp"
                    android:isIndicator="false"
                    android:numStars="5"
                    tools:ignore="SpeakableTextPresentCheck"></RatingBar>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Spiciness" />

                <RatingBar
                    android:id="@+id/ratingBarSpiciness"
                    style="@android:style/Widget.Material.Light.RatingBar.Indicator"
                    android:layout_width="180dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="10dp"
                    android:isIndicator="false"
                    android:numStars="5"
                    tools:ignore="SpeakableTextPresentCheck"></RatingBar>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Portion" />

                <RatingBar
                    android:id="@+id/ratingBarPortion"
                    style="@android:style/Widget.Material.Light.RatingBar.Indicator"
                    android:layout_width="180dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="10dp"
                    android:isIndicator="false"
                    android:numStars="5"
                    tools:ignore="SpeakableTextPresentCheck"></RatingBar>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Price" />

                <RatingBar
                    android:id="@+id/ratingBarPrice"
                    style="@android:style/Widget.Material.Light.RatingBar.Indicator"
                    android:layout_width="180dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="10dp"
                    android:isIndicator="false"
                    android:numStars="5"
                    tools:ignore="SpeakableTextPresentCheck"></RatingBar>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Overall Value" />

                <RatingBar
                    android:id="@+id/ratingBarOverall"
                    style="@android:style/Widget.Material.Light.RatingBar.Indicator"
                    android:layout_width="180dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="10dp"
                    android:isIndicator="false"
                    android:numStars="5"
                    tools:ignore="SpeakableTextPresentCheck"></RatingBar>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Other Items" />

            <EditText
                android:id="@+id/newRatingOtherItems"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:ems="10"
                android:hint="Side menus"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                tools:text="Other items..." />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notes" />

            <EditText
                android:id="@+id/newRatingNotes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="65dp"
                android:ems="10"
                android:gravity="start|top"
                android:hint="Comments"
                android:inputType="textMultiLine"
                android:minHeight="48dp"
                tools:text="Notes..." />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>