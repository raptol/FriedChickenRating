<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="16dp"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="10dp">

            <TextView
                android:id="@+id/viewRatingTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:gravity="center"
                android:paddingLeft="4dp"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:text="Spicy Chicken 15pcs" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgViewPicture"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.05"
                    android:paddingLeft="80dp"
                    tools:src="@tools:sample/avatars" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/btnEditRating"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="2dp"
                        android:text="Edit"
                        android:textSize="11sp"
                        app:cornerRadius="@dimen/button_corner_radius" />

                    <Button
                        android:id="@+id/btnDeleteRating"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="2dp"
                        android:text="Delete"
                        android:textSize="11sp"
                        app:cornerRadius="@dimen/button_corner_radius" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/viewRatingPlaceName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingLeft="60dp"
                        android:textAlignment="center"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        tools:text="Pelican Chicken" />

                    <ImageView
                        android:id="@+id/btnOpenMap"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="20dp"
                        android:src="@drawable/home_map" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/viewRatingRegion"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:paddingLeft="60dp"
                            android:textSize="16sp"
                            tools:text="Burnaby" />

                        <TextView
                            android:id="@+id/viewRatingChickenType"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:paddingLeft="60dp"
                            android:textSize="16sp"
                            tools:text="Korean" />

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/btnMyFavorite"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:src="@drawable/ic_icon_favorite" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Ratings"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/btnShare"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:src="@drawable/ic_icon_share" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Flavor" />

                    <RatingBar
                        android:id="@+id/ratingBarFlavor"
                        style="@android:style/Widget.Material.Light.RatingBar.Indicator"
                        android:layout_width="180dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="10dp"
                        android:clickable="false"
                        android:isIndicator="true"
                        android:numStars="5"
                        tools:ignore="SpeakableTextPresentCheck"></RatingBar>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Crunch" />

                    <RatingBar
                        android:id="@+id/ratingBarCrunch"
                        style="@android:style/Widget.Material.Light.RatingBar.Indicator"
                        android:layout_width="180dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="10dp"
                        android:clickable="false"
                        android:isIndicator="true"
                        android:numStars="5"
                        tools:ignore="SpeakableTextPresentCheck"></RatingBar>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Spiciness" />

                    <RatingBar
                        android:id="@+id/ratingBarSpiciness"
                        style="@android:style/Widget.Material.Light.RatingBar.Indicator"
                        android:layout_width="180dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="10dp"
                        android:clickable="false"
                        android:isIndicator="true"
                        android:numStars="5"
                        tools:ignore="SpeakableTextPresentCheck"></RatingBar>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Portion" />

                    <RatingBar
                        android:id="@+id/ratingBarPortion"
                        style="@android:style/Widget.Material.Light.RatingBar.Indicator"
                        android:layout_width="180dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="10dp"
                        android:clickable="false"
                        android:isIndicator="true"
                        android:numStars="5"
                        tools:ignore="SpeakableTextPresentCheck"></RatingBar>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Price" />

                    <RatingBar
                        android:id="@+id/ratingBarPrice"
                        style="@android:style/Widget.Material.Light.RatingBar.Indicator"
                        android:layout_width="180dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="10dp"
                        android:clickable="false"
                        android:isIndicator="true"
                        android:numStars="5"
                        tools:ignore="SpeakableTextPresentCheck"></RatingBar>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Overall Value" />

                    <RatingBar
                        android:id="@+id/ratingBarOverall"
                        style="@android:style/Widget.Material.Light.RatingBar.Indicator"
                        android:layout_width="180dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="10dp"
                        android:clickable="false"
                        android:isIndicator="true"
                        android:numStars="5"
                        tools:ignore="SpeakableTextPresentCheck"></RatingBar>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_weight="0.1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Other Items"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/viewRatingOtherItems"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:ems="10"
                    android:paddingLeft="12dp"
                    tools:text="Other items..." />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_weight="0.2"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Notes"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/viewRatingNotes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="65dp"
                    android:ems="10"
                    android:gravity="start|top"
                    android:paddingLeft="16dp"
                    android:text="Notes..." />
            </LinearLayout>

            <Button
                android:id="@+id/btnShowAllRatingList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Show All Rating List of This Place" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>